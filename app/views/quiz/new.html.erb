<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <title>WebQuiz: New Quiz</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/base.css?<%= rand(10000) %>"/>
    <script type="text/javascript" src="http://208.112.81.88/javascripts/prototype-min.js"></script>
  </head>
  <body>
    <div id="container">
      <div id="top">
        <h1 id="titleh1">New Quiz</h1>
        <h3>A quiz in the works!</h3>
        <div id="logo2">
          <img src="/images/logo.gif" width="64" height="64"/>
        </div>
      </div>
      <div id="menu">
         <a href="/user/home">Home</a>
          <a href="/user/edit">My Profile</a>
          <a href="/user/take_quizzes">Take Quizzes</a>
          <a href="/user/quizzes">My Quizzes</a>
          <a href="/quiz/new" style="color:#173A7A;">New Quiz</a>
          <a href="/user/logout">Logout</a>
      </div>
      <div id="content">
        <div id="update">
        </div>
        <form action="/quiz/create" method="post" name="frmQuizCreate">
         <%= token_tag %>
          <p>
            Name:<br>
            <input name="quiz[name]" onchange="$('titleh1').update(this.value);" class="field" size="35" type="text"/>
          </p>
          <a href="javascript:void(0);" onclick="Element.toggle('advanced');">Toggle Advanced Settings</a>
          <div id="advanced" style="display:none;margin-bottom:5px;">
            <p>
              Password Protect:<br>
              <select name="quiz[password_protect]" class="field">
                <option value="0">No</option>
                <option valid="1">Yes</option>
              </select>
            </p>
            <p>
              Password:<br>
              <input type="text" name="quiz[password]" class="field" />
            </p>
            <p>Attempts Allowed:<br>
            <input type="text" size="2" name="quiz[attempts]" value="0" class="field" />
            </p>
            <p>Total Points:<br>
            <input type="text" size="2" name="quiz[total]" value="0" class="field" />
            </p>
            <p>
            Visible on Search:<br>
            <select name="quiz[searchable]" class="field">
                <option value="0">No</option>
                <option valid="1">Yes</option>
              </select>
            </p>
          </div><p>
          <button name="btnSubmit" type="submit">Submit</button>
          </p>
          </form>
      </div>
      <div id="bottom">
      
      </div>
    </div>
  </body>
</html>
 